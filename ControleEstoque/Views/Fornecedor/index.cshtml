@{
    ViewBag.Title = "CCO Eletro - Fornecedores";
    ViewData["JsLink"] = "/Scripts/Views/fornecedor.js";
}


<div ng-controller="FornecedorController" class="conteudo-dashboard">
    <form name="myForm" ng-submit="adicionarFornecedor()" novalidate>
        <div class="form-add-edit">
            <div class="row">
                <div class="col-md-4">
                    <div class="input-group">
                        <span class="input-group-addon">Nome</span>
                        <input type="text" name="nome" ng-model="Pessoa.Nome" placeholder="Nome do fornecedor" class="form-control nome-validate" required />
                        <div class="nome input-group-addon campo-erro" style="display:none;"></div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="input-group">
                        <span class="input-group-addon">Email</span>
                        <input type="text" ng-model="Pessoa.Email" placeholder="fornecedor@fornecedor.com" class="form-control nome-validate" required />
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="input-group">
                        <span class="input-group-addon">DDD</span>
                        <input type="text" ng-model="Pessoa.Ddd" placeholder="81" class="form-control nome-validate" required drt-numerico />
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="input-group">
                        <span class="input-group-addon">Fone</span>
                        <input type="text" ng-model="Pessoa.Telefone" placeholder="3033-2022" class="form-control nome-validate" required />
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-3">
                    <div class="input-group">
                        <span class="input-group-addon">CNPJ</span>
                        <input type="text" ng-model="Pessoa.Documento" placeholder="72.356.373/0001-00" class="form-control nome-validate" drt-numerico />
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="input-group">
                        <span class="input-group-addon">CEP</span>
                        <input type="text" id="cep" ng-model="Pessoa.Cep" onblur="pesquisacep(this.value);" placeholder="54160-660" class="form-control" drt-numerico />
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="input-group">
                        <span class="input-group-addon">Endereço</span>
                        <input type="text" id="rua" ng-model="Pessoa.Endereco" readonly class="form-control" />
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="input-group">
                        <span class="input-group-addon">Bairro</span>
                        <input type="text" id="bairro" ng-model="Pessoa.Bairro" readonly class="form-control" />
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-3">
                    <div class="input-group">
                        <span class="input-group-addon">Cidade</span>
                        <input type="text" id="cidade" ng-model="Pessoa.Municipio.Nome" readonly class="form-control" />
                        <input type="hidden" id="ibge" value="" ng-model="Pessoa.Municipio.Id" />
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="input-group">
                        <span class="input-group-addon">UF</span>
                        <input type="text" id="uf" ng-model="Pessoa.Municipio.Estado.Uf" readonly class="form-control" />
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="input-group">
                    </div>
                </div>
                <div class="col-md-3">
                </div>
            </div>
            <div class="row">
                <div class="col-md-7">
                </div>
                <div class="col-md-3">
                    <button type="button" class="form-control btn btn-danger" ng-click="cancelarAlteracao()" ng-show="!OpSalvar">Cancelar Alteração</button>
                </div>
                <div class="col-md-2">
                    <button type="submit" class="form-control btn btn-primary" ng-show="OpSalvar">Salvar</button>
                    <button type="submit" class="form-control btn btn-primary" ng-show="!OpSalvar">Alterar</button>
                </div>
            </div>
        </div>
    </form>

    <!-- Table Area-->
    <div class="table-responsive">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Nome</th>
                    <th>CNPJ</th>
                    <th>Endereço</th>
                    <th>Ação</th>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="f in (Fornecedores | orderBy:'Nome':true).slice(((currentPage-1)*itemsPerPage), ((currentPage)*itemsPerPage))" class="text-center">
                    <td>{{f.Nome}}</td>
                    <td>{{f.Documento}}</td>
                    <td>{{f.Endereco}}</td>
                    <!--<td><span ng-click="selecionarFornecedor(f.Id)" class="glyphicon glyphicon-pencil action-icon" aria-hidden="true" data-toggle="tooltip" data-placement="top" title="Editar Fornecedor"></span></td>-->
                    <td>
                        <a href="#" ng-click="selecionarFornecedor(f.Id)"><i class="fa fa-edit" aria-hidden="true"></i></a>
                        <a href="#" ng-click="removerFornecedor(f.Id)"><i class="fa fa-close" aria-hidden="true"></i></a>
                    </td>
                </tr>
            </tbody>
        </table>
        <span id="no-result">Sua pesquisa não obteve resultados</span>
    </div>

    <br />

    <div class="col-lg-12 text-center">
        <nav>
            <uib-pagination total-items="totalItems" max-size="10" ng-model="currentPage" ng-change="pageChanged()" class="pagination-sm" items-per-page="itemsPerPage"></uib-pagination>
        </nav>
    </div>

</div>

