@{
    ViewBag.Title = "CCO Eletro - Clientes";
}

<form action="#" method="post" id="form-novo" class="form">
    <div class="form-add-edit">
        <div class="row">
            <div class="col-md-4">
                <div class="input-group">
                    <span class="input-group-addon">Nome</span>
                    <input type="text" ng-model="Cliente.Nome" placeholder="Nome do produto" class="form-control nome-validate" />
                    <div class="nome input-group-addon campo-erro" style="display:none;"></div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="input-group">
                    <span class="input-group-addon">Email</span>
                    <input type="text" ng-model="Cliente.Email" placeholder="fornecedor@fornecedor.com" class="form-control nome-validate" />
                </div>
            </div>
            <div class="col-md-2">
                <div class="input-group">
                    <span class="input-group-addon">DDD</span>
                    <input type="text" ng-model="Cliente.DDD" placeholder="81" class="form-control nome-validate" />
                </div>
            </div>
            <div class="col-md-2">
                <div class="input-group">
                    <span class="input-group-addon">Fone</span>
                    <input type="text" ng-model="Cliente.Telefone" placeholder="3033-2022" class="form-control nome-validate" />
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                <div class="input-group">
                    <span class="input-group-addon">CPF</span>
                    <input type="number" ng-model="Cliente.CPF" placeholder="09284003440" class="form-control" />
                </div>
            </div>
            <div class="col-md-4">
                <div class="input-group">
                    <span class="input-group-addon">Nascimento</span>
                    <input type="text" ng-model="Cliente.Nascimento" placeholder="21/07/1993" class="form-control nome-validate" />
                </div>
            </div>
            <div class="col-md-4">
                <div class="input-group">
                    <span class="input-group-addon">Endereço</span>
                    <input type="text" name="descricao" ng-model="Cliente.Endereco" id="money" class="form-control money" placeholder="99,90" value="0,00" />
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                <div class="input-group">
                    <span class="input-group-addon">Bairro</span>
                    <input type="number" ng-model="Cliente.Bairro" placeholder="Socorro" class="form-control" />
                </div>
            </div>
            <div class="col-md-3">
                <div class="input-group">
                    <span class="input-group-addon">Cidade</span>
                    <input type="number" ng-model="Cliente.Cidade" placeholder="Jaboatão" class="form-control" />
                </div>
            </div>
            <div class="col-md-2">
                <div class="input-group">
                    <span class="input-group-addon">UF</span>
                    <input type="number" ng-model="Cliente.Uf" placeholder="PE" class="form-control" />
                </div>
            </div>
            <div class="col-md-3">
                <input type="submit" name="submit" value="Salvar" class="form-control btn btn-primary" />
            </div>
        </div>
    </div>
</form>
<table class="table lista">
    <thead class="thead">
        <tr>
            <td>Nome</td>
            <td>Nascimento</td>
            <td>Documento</td>
            <td>Ação</td>
        </tr>
    </thead>
    <tbody class="tbody">
        <tr ng-repeat="Cliente in Clientes">
            <td>{{Cliente.Nome}}</td>
            <td>{{Cliente.Documento}}</td>
            <td>{{Cliente.Endereco}}</td>
            <td>{{Cliente.Acao}}</td>
        </tr>
    </tbody>
</table>