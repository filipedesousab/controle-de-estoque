<!DOCTYPE html>
<html>
<head>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="Css/style.css">
    <!-- Latest compiled and minified JavaScript -->
    <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>

    <script type="text/javascript" src="js/script.js"></script>
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.3/css/font-awesome.min.css" rel="stylesheet" integrity="sha384-T8Gy5hrqNKT+hzMclPo118YTQO6cYprQmhrYwIiQ/3axmI1hQomh7Ud2hPOy8SP1" crossorigin="anonymous">
</head>

<body class="home">
    <div class="container-fluid display-table" style="position: relative;">
        <div class="row display-table-row">
            <div class="col-md-2 col-sm-1 hidden-xs display-table-cell v-align box" id="navigation">
                <div class="logo"><img src="~/Img/logo.png" alt="merkery_logo" class="hidden-xs hidden-sm"></div>
                <div class="navi">
                    <ul>
                        <li class="btn-menu btn-home" page="home"><a href="Home"><i class="fa fa-home" aria-hidden="true"></i><span class="hidden-xs hidden-sm">Home</span></a></li>
                        <li class="btn-menu btn-vendas" page="vendas"><a href="Vendas"><i class="fa fa-tasks" aria-hidden="true"></i><span class="hidden-xs hidden-sm">Vendas</span></a></li>
                        <li class="btn-menu btn-clientes" page="clientes"><a href="Cliente"><i class="fa fa-bar-chart" aria-hidden="true"></i><span class="hidden-xs hidden-sm">Clientes</span></a></li>
                        <li class="btn-menu btn-produtos" page="produtos"><a href="Produto"><i class="fa fa-user" aria-hidden="true"></i><span class="hidden-xs hidden-sm">Produtos</span></a></li>
                        <li class="btn-menu btn-fornecedores" page="fornecedores"><a href="Fornecedor"><i class="fa fa-calendar" aria-hidden="true"></i><span class="hidden-xs hidden-sm">Fornecedores</span></a></li>
                        <li><a href="Configuracoes"><i class="fa fa-cog" aria-hidden="true"></i><span class="hidden-xs hidden-sm">Configurações</span></a></li>
                    </ul>
                </div>
            </div>
            <div class="col-md-10 display-table-cell v-align conteudo" pagina-atual="" style="background-color: #132856">
                <!-- AQUI IRÁ ENTRAR O CONTEÚDO ATUALIZADO PELO JAVASCRIPT -->
                @RenderBody()
            </div>
        </div>
    </div>
</body>

</html>
